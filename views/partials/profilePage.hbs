<br/>
<h3 class="text-center">Your Personal Library</h3>
<hr/>
<div class="container-fluid px-md-5">
  {{#each books}}
  <div class="book mb-4">
    <div class="row g-4">
      <div class="col-md-3 col-sm-4 align-self-center">
        <img src="{{this.img}}" class="img-fluid rounded-start" alt="{{this.title}}">
      </div>
      <div class="col-md-5 col-sm-8">
        <div class="book-info">
          <h5 class="book-title">{{this.title}}</h5>
          <p class="book-desc">{{this.desc}}</p>
        </div>
      </div>
      <div class="col-md-4 col-sm-12">
        <div class="book-action">
          <a href="/returnBook/{{this._id}}" class="btn btn-primary">Return</a>
        </div>
      </div>
    </div>
  </div>
  <hr/>
  {{/each}}
</div>
